<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exercise_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_anim"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#FBFCFC"
            android:shape="ring"
            app:cardElevation="6dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">

            <Button
                android:id="@+id/btMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textStyle="bold"
                android:textColor="#C2A0D1"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_medium"
                app:cornerRadius="30in"
                app:cardCornerRadius="50dp"
                android:background="?android:attr/selectableItemBackground"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#FBFCFC"
            android:shape="ring"
            app:cardElevation="3dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp"
            >

            <Button
                android:id="@+id/btTuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                app:cornerRadius="30in"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_medium"
                app:cardCornerRadius="50dp"
                android:textStyle="bold"
                android:textColor="#C2A0D1"
                android:background="?android:attr/selectableItemBackground"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#FBFCFC"
            android:shape="ring"
            app:cardElevation="3dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp"
           >

            <Button
                android:id="@+id/btWednesday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:text="Wednesday"
                app:cornerRadius="30in"
                app:cardCornerRadius="50dp"
                app:cardElevation="60dp"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_medium"
                android:textStyle="bold"
                android:textColor="#C2A0D1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#FBFCFC"
            android:shape="ring"
            app:cardElevation="3dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">

            <Button
                android:id="@+id/btThursday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:text="Thursday"
                app:cornerRadius="30in"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_medium"
                android:textStyle="bold"
                android:textColor="#C2A0D1" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll2">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:backgroundTint="#FBFCFC"
            android:shape="ring"
            app:cardCornerRadius="50dp"
            app:cardElevation="3dp">

            <Button
                android:id="@+id/btFriday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:text="Friday"
                android:textStyle="bold"
                android:textColor="#C2A0D1"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_medium" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:backgroundTint="#FBFCFC"
            android:shape="ring"
            app:cardCornerRadius="50dp"
            app:cardElevation="3dp">

            <Button
                android:id="@+id/btSaturday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:text="Saturday"
                android:textStyle="bold"
                android:textColor="#C2A0D1"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_medium"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="98dp"
        android:layout_height="5dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#ffffff"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll3" />

    <View
        android:id="@+id/divider2"
        android:layout_width="98dp"
        android:layout_height="1dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/ll3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:requiresFadingEdge="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Exercise By Part"
        android:textColor="#f1c4f3"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll3" />




</androidx.constraintlayout.widget.ConstraintLayout>