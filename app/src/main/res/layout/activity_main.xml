<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_anim">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/wikedfit_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivCircle"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/roundedbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exButton"
        style="@style/AppTheme.ButtonStyle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="130dp"
        android:text="Routines"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#C2A0D1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCircle2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="115dp"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exButton" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="115dp"
        android:src="@drawable/roundedbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exButton" />

    <Button
        android:id="@+id/calButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="115dp"
        style="@style/AppTheme.ButtonStyle"
        android:text="Calories"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#C2A0D1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exButton" />

</androidx.constraintlayout.widget.ConstraintLayout>